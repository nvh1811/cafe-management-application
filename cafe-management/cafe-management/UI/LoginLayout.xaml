<UserControl x:Class="cafe_management.UI.LoginLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:cafe_management.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid Background="#FFF2F2F2">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
                <TextBlock Text="Đăng nhập" FontSize="24" HorizontalAlignment="Center" Margin="0 0 0 20"/>
                <TextBlock Text="Tài Khoản"/>
                <TextBox x:Name="txtUser" Margin="0 0 0 10"/>
                <TextBlock Text="Mật Khẩu"/>
                <PasswordBox x:Name="txtPass" Margin="0 0 0 20"/>

                <Button Content="Đăng nhập" Click="Login_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
