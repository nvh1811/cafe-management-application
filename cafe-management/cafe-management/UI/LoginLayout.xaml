<UserControl x:Class="cafe_management.UI.LoginLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:cafe_management.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent">


    <Border CornerRadius="12">
        <Border.Background>
            <ImageBrush ImageSource="/Images/CoffeeDrinks.jpg"
                        Stretch="UniformToFill"/>
        </Border.Background>
        <Border CornerRadius="10"
                BorderThickness="5"
                Opacity="0.85" Margin="0,0,-29,-49">

            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#b59e7d" Offset="0"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#cec1a8" Offset="0"/>
                </LinearGradientBrush>
            </Border.Background>


            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Margin="0,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="LOG IN"
                           Foreground="#3e000c"
                           FontSize="16"
                           FontFamily="Montserrat"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"/>
                    
                </Grid>
                <StackPanel Width="250"
                        Grid.Row="2"
                        Orientation="Vertical"
                        Margin="0,35,0,0">

                    <Image Source="/Images/Cat1.png"
                       Width="100" Height="100"
                       RenderTransformOrigin="0.5,0.5">
                        <Image.RenderTransform>
                            <ScaleTransform ScaleX="3" ScaleY="2"/>
                        </Image.RenderTransform>
                    </Image>

                    <TextBlock Text="Coffee and Tea"
                           Foreground="#3e000c"
                           FontSize="25"
                           FontWeight="Medium"
                           FontFamily="Montserrat"
                           HorizontalAlignment="Center"/>

                    <TextBlock Text="User Name"
                           Foreground="#3e000c"
                           FontSize="12"
                           FontWeight="Medium"
                           FontFamily="Montserrat"
                           Margin="0,35,0,0"/>

                    <TextBox x:Name="txtUser"
                         FontSize="15"
                         FontWeight="Medium"
                         FontFamily="Montserrat"                         
                         Foreground="#3e000c"
                         CaretBrush="LightGray"
                         BorderBrush="DarkGray"
                         BorderThickness="0,0,0,1"
                         Height="28"
                         VerticalAlignment="Center"                        
                         Margin="0,5,0,0"
                         Padding="25,5,0,0">
                        <TextBox.Background>
                            <ImageBrush ImageSource="/Images/user.png"                                   
                                    Stretch="Uniform"
                                    AlignmentX="Left"
                                    AlignmentY="Center"
                                    Viewport="3,3,20,20"
                                    ViewportUnits="Absolute"
                                    TileMode="None"/>
                        </TextBox.Background>
                    </TextBox>
                    <TextBlock Text="Password"
                           Foreground="#3e000c"
                           FontSize="12"
                           FontWeight="Medium"
                           FontFamily="Montserrat"
                           Margin="0,15,0,0"/>

                    <PasswordBox x:Name="txtPassWord"
                         FontSize="15"
                         FontWeight="Medium"
                         FontFamily="Montserrat"                         
                         Foreground="#3e000c"
                         CaretBrush="LightGray"
                         BorderBrush="DarkGray"
                         BorderThickness="0,0,0,1"
                         Height="28"
                         VerticalAlignment="Center"                        
                         Margin="0,5,0,0"
                         Padding="25,5,0,0">
                        <PasswordBox.Background>
                            <ImageBrush ImageSource="/Images/padlock.png"                                   
                                    Stretch="Uniform"
                                    AlignmentX="Left"
                                    AlignmentY="Center"
                                    Viewport="3,3,20,20"
                                    ViewportUnits="Absolute"
                                    TileMode="None"/>
                        </PasswordBox.Background>
                    </PasswordBox>
                    <Button x:Name="buttonLogin"
                        BorderThickness="0"
                        Content="LOG IN"
                        Foreground="#f1eada"
                        FontSize="12"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Grid.Column="2"
                        Click="buttonLogin_Click"
                        Margin="0,50,0,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#743014"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#3e000c"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="150" Height="40"
                                    CornerRadius="20"
                                    Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,15,0,0">
                        <TextBlock Text="Forgot Password?"
                           Foreground="#3e000c"
                           FontSize="12"
                           FontWeight="Medium"
                           FontFamily="Montserrat"                           />
                        <TextBlock Text="Reset"
                           Foreground="#743014"
                           FontSize="12"
                           FontWeight="Medium"
                           FontFamily="Montserrat"
                           Cursor="Hand"
                           Margin="8,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Border>
</UserControl>
