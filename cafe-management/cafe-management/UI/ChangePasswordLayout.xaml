<UserControl x:Class="cafe_management.UI.ChangePasswordLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:cafe_management.UI"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">
    <Border>
        <Border.Background>
            <ImageBrush ImageSource="/Images/CoffeeDrinks.jpg"
            Stretch="UniformToFill"/>
        </Border.Background>
        <Border CornerRadius="10"
                BorderThickness="5"
                Opacity="0.85">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#b59e7d" Offset="0"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#cec1a8" Offset="0"/>
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel Width="300">
                <TextBlock Text="Đổi Mật Khẩu"
                           FontSize="20"
                           HorizontalAlignment="Center"
                           FontFamily="Montserrat"
                           Foreground="#3e000c"
                           Margin="0,10,0,0"/>
                <TextBlock Text="Tên đăng nhập "
                           Foreground="#3e000c"
                           FontSize="12"
                           FontWeight="Medium"
                           FontFamily="Montserrat"
                           Margin="0,35,0,0"/>
                <TextBox x:Name="txtUser"
                         FontSize="15"
                         FontWeight="Medium"
                         FontFamily="Montserrat"                         
                         Foreground="#3e000c"
                         CaretBrush="LightGray"
                         BorderBrush="DarkGray"
                         BorderThickness="0,0,0,1"
                         Height="28"
                         VerticalAlignment="Center"                        
                         Margin="0,5,0,0"
                         Padding="25,5,0,0">
                    <TextBox.Background>
                        <ImageBrush ImageSource="/Images/user.png"                                   
                                    Stretch="Uniform"
                                    AlignmentX="Left"
                                    AlignmentY="Center"
                                    Viewport="3,3,20,20"
                                    ViewportUnits="Absolute"
                                    TileMode="None"/>
                    </TextBox.Background>
                </TextBox>
                
                <TextBlock Text="Mật khẩu hiện tại"
                           Foreground="#3e000c"
                           FontSize="12"
                           FontWeight="Medium"
                           FontFamily="Montserrat"
                           Margin="0,15,0,0"/>

                <PasswordBox x:Name="txtCurrentPassWord"
                             FontSize="15"
                             FontWeight="Medium"
                             FontFamily="Montserrat"                         
                             Foreground="#3e000c"
                             CaretBrush="LightGray"
                             BorderBrush="DarkGray"
                             BorderThickness="0,0,0,1"
                             Height="28"
                             VerticalAlignment="Center"                        
                             Margin="0,5,0,0"
                             Padding="25,5,0,0">
                    <PasswordBox.Background>
                        <ImageBrush ImageSource="/Images/padlock.png"                                   
                                    Stretch="Uniform"
                                    AlignmentX="Left"
                                    AlignmentY="Center"
                                    Viewport="3,3,20,20"
                                    ViewportUnits="Absolute"
                                    TileMode="None"/>
                    </PasswordBox.Background>
                </PasswordBox>
                <TextBlock Text="Mật khẩu mới"
                           Foreground="#3e000c"
                           FontSize="12"
                           FontWeight="Medium"
                           FontFamily="Montserrat"
                           Margin="0,15,0,0"/>

                <PasswordBox x:Name="txtNewPassWord"
                             FontSize="15"
                             FontWeight="Medium"
                             FontFamily="Montserrat"                         
                             Foreground="#3e000c"
                             CaretBrush="LightGray"
                             BorderBrush="DarkGray"
                             BorderThickness="0,0,0,1"
                             Height="28"
                             VerticalAlignment="Center"                        
                             Margin="0,5,0,0"
                             Padding="25,5,0,0">
                    <PasswordBox.Background>
                        <ImageBrush ImageSource="/Images/padlock.png"                                   
                                    Stretch="Uniform"
                                    AlignmentX="Left"
                                    AlignmentY="Center"
                                    Viewport="3,3,20,20"
                                    ViewportUnits="Absolute"
                                    TileMode="None"/>
                    </PasswordBox.Background>
                </PasswordBox>
                <TextBlock Text="Xác nhận mật khẩu mới"
                           Foreground="#3e000c"
                           FontSize="12"
                           FontWeight="Medium"
                           FontFamily="Montserrat"
                           Margin="0,15,0,0"/>

                <PasswordBox x:Name="txtConfirmPassWord"
                             FontSize="15"
                             FontWeight="Medium"
                             FontFamily="Montserrat"                         
                             Foreground="#3e000c"
                             CaretBrush="LightGray"
                             BorderBrush="DarkGray"
                             BorderThickness="0,0,0,1"
                             Height="28"
                             VerticalAlignment="Center"                        
                             Margin="0,5,0,0"
                             Padding="25,5,0,0">
                    <PasswordBox.Background>
                        <ImageBrush ImageSource="/Images/padlock.png"                                   
                                    Stretch="Uniform"
                                    AlignmentX="Left"
                                    AlignmentY="Center"
                                    Viewport="3,3,20,20"
                                    ViewportUnits="Absolute"
                                    TileMode="None"/>
                    </PasswordBox.Background>
                </PasswordBox>
                <StackPanel Orientation="Horizontal"
                            Height="100">
                    <Grid Margin="0,20,0,0" Width="300">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Button x:Name="buttonChangePassword"
                                BorderThickness="0"
                                Content="Xác nhận"
                                Foreground="#f1eada"
                                FontSize="12"
                                FontFamily="Montserrat"
                                Cursor="Hand"                       
                                Click="buttonChangePassword_Click"
                                Grid.Column="1">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#3e000c"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#743014"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="100" Height="30"
                                            CornerRadius="20"
                                            Background="{TemplateBinding Background}"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center">
                                        <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button x:Name="buttonBack"
                                BorderThickness="0"
                                Content="Quay lại"
                                Foreground="#f1eada"
                                FontSize="12"
                                FontFamily="Montserrat"
                                Cursor="Hand"        
                                Click="buttonBack_Click"
                                HorizontalAlignment="Left"
                                Grid.Column="0">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Background" Value="#3e000c"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#743014"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Width="100" Height="30"
                                    CornerRadius="20"
                                    Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                                                HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </StackPanel>
            </StackPanel>
            
        </Border>        
    </Border>
</UserControl>
